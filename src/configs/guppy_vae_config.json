{
    "exp": {
      "name": "guppy_vae"
    },
    "data_loader": {
      "name": "guppy_vae_data_loader.GuppyDataLoader",
      "folder_loc": "../../data/raw",
      "use_generated": true
    },
    "model":{
      "name": "vae_model.VAEModel",
      "input_shape": [256,256,3],
      "denoise": true,
      "sp_ratio": 0.9,
      "noise_ratio": 0.1,
      "n_latents": 4,
      "latent_size": 10,
      "optimizer": "adam",
      "recon_loss_weight": 0.5,
      "use_perceptual_loss": false,
      "perceptual_loss_model": "vgg",
      "pereceptual_loss_layers": [2, 2],
      "perceptual_loss_layer_weights": [1, 1],
      "mu_prior": 0.0,
      "sigma_prior": 1.0,
      "use_mmd": true,
      "mmd_coef": 5000.0,
      "use_kl": false,
      "kl_coef": 1.0,
      "kernel_l2_regularize": 2.5e-5,
      "kernel_rnorm_init": 0.02
    },
    "trainer":{
      "name": "guppy_ornaments_trainer.GuppyOrnamentsTrainer",
      "verbose_training": true,
      "batch_size": 20,
      "validation_split": 0.05,
      "num_epochs": 500,
      "shuffle": true,
      "lr_start": 10e-5,
      "lr_end": 10e-8,
      "min_delta": 0.0001,
      "patience": 15,
      "use_kl_warmup": false,
      "kl_wu_start": 0.0,
      "kl_wu_stop": 1.0,
      "kl_wu_n_cycle": 4,
      "kl_wu_ratio": 0.5,
      "kl_wu_n_iter": 500
    },
    "callbacks":{
      "callback_metrics": ["loss", "val_loss", "mmd_discrepancy"],
      "checkpoint_monitor": "val_loss",
      "checkpoint_mode": "auto",
      "checkpoint_save_best_only": true,
      "checkpoint_save_weights_only": true,
      "checkpoint_verbose": true,
      "tb_logid": "../checkpoints",
      "tb_write_graph": false,
      "tb_write_images": false,
      "tb_historgram_freq": 25
    }
  }