{
    "exp": {
      "name": "butterfly_vae_real_4"
    },
    "data_loader": {
      "name": "butterfly_vae_data_loader.ButterflyDataLoader",
      "use_generated": true,
      "use_real": true,
      "folder_loc": "../../data/raw",
      "n_samples": 9216,
      "cache": true
    },
    "model":{
      "name": "vae_model.VAEModel",
      "input_shape": [256,256,3],
      "denoise": true,
      "sp_ratio": 0.9,
      "noise_ratio": 0.1,
      "n_latents": 4,
      "latent_size": 10,
      "optimizer": "adam",
      "recon_loss_weight": 0.5,
      "use_perceptual_loss": true,
      "perceptual_loss_model": "vgg",
      "pereceptual_loss_layers": [2, 5, 9, 13],
      "perceptual_loss_layer_weights": [10, 10, 10, 10],
      "mu_prior": 0.0,
      "sigma_prior": 1.0,
      "use_mmd": true,
      "mmd_coef": 5000.0,
      "use_kl": false,
      "kl_coef": 1000.0,
      "kernel_l2_regularize": 2.5e-5,
      "kernel_rnorm_init": 0.02
    },
    "trainer":{
      "name": "vae_trainer.VAETrainer",
      "verbose_training": true,
      "batch_size": 10,
      "validation_split": 0.01,
      "num_epochs": 1000,
      "shuffle": false,
      "use_lr_scheduler": true,
      "lr_start": -5,
      "lr_stop": -11,
      "min_delta": 0.0001,
      "patience": 15,
      "use_kl_warmup": false,
      "kl_wu_start": 0.0,
      "kl_wu_stop": 1.0,
      "kl_wu_n_cycle": 4,
      "kl_wu_ratio": 0.5,
      "kl_wu_n_iter": 500
    },
    "callbacks":{
      "checkpoint_monitor": "loss",
      "checkpoint_mode": "auto",
      "checkpoint_save_best_only": true,
      "checkpoint_save_weights_only": true,
      "checkpoint_verbose": true,
      "checkpoint_dir": "/mnt/jordanlab/People/ietheredge/VisionEngine/checkpoints",
      "save_freq": 10000,
      "use_early_stopping": false,
      "tensorboard_write_graph": true,
      "tensorboard_write_images": false,
      "tensorboard_historgram_freq": 1000,
      "tensorboard_log_dir": "logs/butterfly_vae"
    }
  }
