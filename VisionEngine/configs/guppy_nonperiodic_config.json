{
    "exp": {
      "name": "guppy_nonperiodic"
    },
    "data_loader": {
      "name": "vae_data_loader.DataLoader",
      "dataset": "guppies",
      "use_generated": false,
      "use_real": true,
      "folder_loc": "VisionEngine/data_loaders/datasets",
      "n_samples": 1000,
      "cache": false
    },
    "model":{
      "name": "vae_model.VAEModel",
      "loadckpt": true,
      "ckpt_path": "/home/etheredge/Workspace/VisionEngine/checkpoints/guppy_nonperiodic/2020-210-16/guppy_nonperiodic.hdf5",
      "input_shape": [256,256,3],
      "denoise": true,
      "sp_ratio": 0.9,
      "noise_ratio": 0.1,
      "augment": true,
      "n_latents": 4,
      "latent_size": 10,
      "optimizer": "adam",
      "loss": "mse",
      "use_perceptual_loss": true,
      "perceptual_loss_model": "vgg",
      "pereceptual_loss_layers": ["block1_conv1", "block3_conv1", "block5_conv2"],
      "perceptual_loss_layer_weights": 1e-4,
      "mu_prior": 0.0,
      "sigma_prior": 1.0,
      "use_mmd": true,
      "mmd_coef": 10000.0,
      "use_kl": false,
      "kl_coef": 8.0,
      "kernel_l2_regularize": null,
      "kernel_rnorm_init": null,
      "encoder_activations": "lrelu",
      "decoder_activations": "relu",
      "last_activation": "sigmoid",
      "use_wppvae": false,
      "wppvae_size": 10,
      "wppvae_w0": 30,
      "siren_init_kernel_init": null,
      "siren_kernel_init": null,
      "siren_bias_init": null,
      "siren_activation": null,
      "siren_kernel_regularizer": null,
      "siren_kernel_constraint": null,
      "siren_activity_regularizer": null
    },
    "trainer":{
      "name": "vae_trainer.VAETrainer",
      "verbose_training": true,
      "batch_size": 16,
      "validation_split": 0.01,
      "num_epochs": 1000,
      "shuffle": true,
      "use_lr_scheduler": true,
      "lr_start": -3,
      "lr_stop": -5,
      "min_delta": 0.0001,
      "patience": 3,
      "use_kl_warmup": false,
      "kl_wu_start": 0.0,
      "kl_wu_stop": 1.0,
      "kl_wu_n_cycle": 4,
      "kl_wu_ratio": 0.5,
      "kl_wu_n_iter": 500
    },
    "callbacks":{
      "checkpoint_monitor": "loss",
      "checkpoint_mode": "auto",
      "checkpoint_save_best_only": true,
      "checkpoint_save_weights_only": true,
      "checkpoint_verbose": true,
      "checkpoint_dir": "checkpoints",
      "save_freq": 100,
      "use_early_stopping": false,
      "early_stopping_monitor": "loss",
      "tensorboard_write_graph": true,
      "tensorboard_write_images": false,
      "tensorboard_historgram_freq": 100,
      "tensorboard_log_dir": "logs"
    }
  }
